#include <stdio.h>
int binarysearch(int arr[], int size, int seach)
{
    int low, mid, hight;
    low = 0;
    hight = size - 1;
    
    while (low <= hight)
    {
        mid = (low + hight) / 2;
        if (arr[mid] == seach)
        {
            return mid;
        }
        else if (arr[mid] < seach)
        {
            low = mid + 1;
        }
        else if (arr[mid] > seach)
        {
            hight = mid - 1;
        }
    }
    return -1;
}

int main()
{
    int arr[] = {100,200,300,400,5000,6000};
    int size, seach, i;
    size = sizeof(arr) / sizeof(int); // find array of size

    for (i = 0; i < size; i++)
    {
        printf("%d ", arr[i]);
    }
    printf("\n enter element for search");
    scanf("%d", &seach);
    
    // binary search
    int b = binarysearch(arr,size,seach);
    printf("\n Element %d is at index %d", seach,b);
    return 0;
}
